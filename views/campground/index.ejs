<% layout('./layouts/boilerplate') %>
    <div id="cluster-map"></div>
    <h1>Campground Index</h1>
    <ul>
        <div class="d-flex flex-wrap overflow-scroll max-height-50vh">
            <% for(let camp of campground) { %>
                <div class="card m-2" style="width: 18rem;">
                    <% if (camp.images.length) { %>
                        <img crossorigin="anonymous" class="img-fluid" alt="<%= camp.title %>" src="<%= camp.images[0].url %>">
                    <% } else { %>
                        <img crossorigin="anonymous" class="img-fluid" alt="Default Image" src="https://res.cloudinary.com/dsbtugvtv/image/upload/v1718792548/YelpCamp/hxcunophgsdrqaxilllf.jpg">
                    <% } %>
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= camp.title %>
                        </h5>
                        <p class="card-text">
                            <%= camp.description %>
                        </p>
                        <a href="/campgrounds/<%= camp._id %>" class="btn btn-primary">Detail</a>
                    </div>
                </div>
            <% } %>
        </div>

    </ul>
    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
        const campgrounds = {features: <%- JSON.stringify(campground) %>}
    </script>
    <script src="/javascripts/clusterMap.js"></script>