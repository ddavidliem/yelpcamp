<% layout('./layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= campground._id %>/update?_method=PUT" method="POST" class="validate-form"
                novalidate enctype="multipart/form-data">
                <div>
                    <label for="title" class="form-label">Title</label>
                    <input type="text" name="campground[title]" id="title" value="<%= campground.title %>"
                        class="form-control" required>
                </div>
                <div>
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="campground[location]" id="location" value="<%= campground.location %>"
                        class="form-control" required>
                </div>
                <div>
                    <label for="location" class="form-label">Price</label>
                    <input type="number" name="campground[price]" id="number" value="<%= campground.number %>"
                        class="form-control" required>
                </div>
                <div class="my-3">
                    <div class="form-file custom-file input-group">
                        <input type="file" class="form-file-input form-control" id="image" name="image" placeholder=""
                            multiple>
                        <label class="form-file-label" for="image">
                            <span class="form-file-text custom-file-label input-group-text">Add more image(s)...</span>
                        </label>
                    </div>
                </div>
                <div class="my-3">
                    <% campground.images.forEach(function(img,i) { %>
                        <img src="<%= img.url %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]"
                                value="<%= img.filename %>">
                        </div>
                        <label for="image-<%= i %>">Delete ?</label>
                        <% }) %>
                </div>
                <button class="btn btn-primary my-3">Submit</button>
        </div>

        </form>

        </div>

    </div>
